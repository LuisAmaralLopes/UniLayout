<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:uni_orientation="vertical"
    tools:parentTag="com.crescentflare.unilayout.containers.UniLinearContainer">
    <com.crescentflare.unilayout.containers.UniLinearContainer
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:uni_orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        app:uni_min_height="50dp">
        <com.crescentflare.unilayout.views.UniTextView
            android:id="@+id/view_under_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#202020"
            android:textSize="17sp"
            android:textStyle="bold"/>
        <com.crescentflare.unilayout.views.UniTextView
            android:id="@+id/view_under_item_additional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#202020"
            android:textSize="15sp"/>
    </com.crescentflare.unilayout.containers.UniLinearContainer>
</merge>
